{
  "compilerOptions": {
    "pretty": true,
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "jsx": "preserve",
    "baseUrl": "./src",
    "noEmit": true,
    "skipLibCheck": true,
    // disabled these because they are checked in eslint as well
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitReturns": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["*"],
      "@utils/*": ["shared/utils/*"]
    },
    // automatically added by nextjs
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/inferno/dist/index.d.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
