    "eslint": "^7.19.0",
    "eslint-plugin-jane": "^9.0.6",
    "husky": "^4.3.8",
    "lemmy-js-client": "0.9.4",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.3.5",
    "node-fetch": "^2.6.1",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
