    "tributejs": "^5.1.3",
    "ws": "^7.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/plugin-transform-typescript": "^7.12.13",
    "@babel/preset-env": "7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@babel/runtime": "^7.12.13",
    "@types/autosize": "^3.0.6",
